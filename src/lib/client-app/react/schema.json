{
  "$schema": "http://json-schema.org/schema",
  "$id": "SchematicsNestModule",
  "title": "Nest Module Options Schema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the application.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to (or do you) use for React application?"
    },
    "description": {
      "type": "string",
      "description": "The description of the application.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What description would you like to (or do you) use for React application?"
    }
  },
  "required": ["name", "description"]
}
