{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@mwaeckerlin/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": true,
          "introspectComments": true,
          "dtoKeyOfComment": "description",
          "controllerKeyOfComment": "description"
        }
      }
    ]
  }
}
